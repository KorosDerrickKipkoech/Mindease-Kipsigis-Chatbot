<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mindease.kipsigis">

    <!-- Permissions for emergency calling -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>




    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MindEaseKipsigisChatbot">


        <!-- Splash/Login launcher -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <!-- OTP verification -->
        <activity
            android:name=".OtpActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <!-- Home screen -->
        <activity
            android:name=".HomeActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />


        <!-- Emergency contacts list -->
        <activity
            android:name=".EmergencyContactsActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />


        <!-- Add new contact -->
        <activity
            android:name=".AddContactActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />


        <!-- Chatbot / mental health assistance -->


        <!-- Diary (Kabwatutik guk) -->
        <activity
            android:name=".DiaryActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />


        <!-- Video page -->
        <activity
            android:name=".VideoActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <activity android:name=".AddDiaryActivity" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />



        <activity
            android:name=".VideoPlayerActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".ChatActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />









    </application>

</manifest>
